<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="hevs.labo.projetandroid.modify_artist">

    <!--1Ã¨re ligne : nom de l'artiste, bouton annuler, bouton sauvegarder-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nom_artiste"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="70"
            android:text="@string/titre_fiche_artiste"
            android:textSize="20dp"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/button_cancelModif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:src="@drawable/cancel_icon"
            />

        <ImageButton
            android:id="@+id/button_saveModif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:src="@drawable/save"/>

    </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_nomArtistModif"
            android:id="@+id/textView_nomArtistCreate"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="33dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_prenomArtistModif"
            android:id="@+id/textView_prenomArtistCreate"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/textView_nomArtistCreate"
            android:layout_alignLeft="@+id/textView_nomArtistCreate"
            android:layout_alignStart="@+id/textView_nomArtistCreate" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_pseudoArtistModif"
            android:id="@+id/textView_pseudoArtistCreate"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/textView_prenomArtistCreate"
            android:layout_alignLeft="@+id/textView_prenomArtistCreate"
            android:layout_alignStart="@+id/textView_prenomArtistCreate" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_naissanceArtistModif"
            android:id="@+id/textView_naissanceArtistCreate"
            android:layout_below="@+id/textView_pseudoArtistCreate"
            android:layout_alignLeft="@+id/textView_pseudoArtistCreate"
            android:layout_alignStart="@+id/textView_pseudoArtistCreate"
            android:layout_marginTop="35dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_decesArtistModif"
            android:id="@+id/textView_decesArtistCreate"
            android:layout_below="@+id/textView_naissanceArtistCreate"
            android:layout_alignLeft="@+id/textView_naissanceArtistCreate"
            android:layout_alignStart="@+id/textView_naissanceArtistCreate"
            android:layout_marginTop="35dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_mvtArtistModif"
            android:id="@+id/textView_mvtArtistCreate"
            android:layout_below="@+id/textView_decesArtistCreate"
            android:layout_alignLeft="@+id/textView_decesArtistCreate"
            android:layout_alignStart="@+id/textView_decesArtistCreate"
            android:layout_marginTop="35dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_nomArtistCreate"
            android:layout_alignBottom="@+id/textView_nomArtistCreate"
            android:layout_alignLeft="@+id/spinner_mvtArtistCreate"
            android:layout_alignStart="@+id/spinner_mvtArtistCreate" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_prenomArtistCreate"
            android:layout_alignBottom="@+id/textView_prenomArtistCreate"
            android:layout_alignLeft="@+id/editText_nomArtistCreate"
            android:layout_alignStart="@+id/editText_nomArtistCreate" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_pseudoArtistCreate"
            android:layout_alignBottom="@+id/textView_pseudoArtistCreate"
            android:layout_alignLeft="@+id/editText_prenomArtistCreate"
            android:layout_alignStart="@+id/editText_prenomArtistCreate" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_naissanceArtistModif"
            android:layout_alignBottom="@+id/textView_naissanceArtistCreate"
            android:layout_alignLeft="@+id/editText_pseudoArtistCreate"
            android:layout_alignStart="@+id/editText_pseudoArtistCreate" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_decesArtistCreate"
            android:layout_alignBottom="@+id/textView_decesArtistCreate"
            android:layout_alignLeft="@+id/spinner_mvtArtistCreate"
            android:layout_alignStart="@+id/spinner_mvtArtistCreate" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_mvtArtistCreate"
            android:layout_alignBottom="@+id/textView_mvtArtistCreate"
            android:layout_toRightOf="@+id/textView_decesArtistCreate"
            android:layout_toEndOf="@+id/textView_decesArtistCreate"
            android:layout_below="@+id/editText_decesArtistCreate" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/imageView_photoArtistModif"
            android:layout_alignTop="@+id/textView_nomArtistCreate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_btnDownloadArtistModif"
            android:layout_alignTop="@+id/textView_naissanceArtistCreate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/download"/>

    </RelativeLayout>
</LinearLayout>
