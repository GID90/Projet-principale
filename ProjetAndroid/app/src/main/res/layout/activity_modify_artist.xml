<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hevs.labo.projetandroid.modify_artist"
    android:background="@drawable/backgroundcard">

    <!--1Ã¨re ligne : nom de l'artiste, bouton annuler, bouton sauvegarder-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nom_artiste"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="70"
            android:text="@string/titre_fiche_artiste"
            android:gravity="center"
            android:textSize="@dimen/textSize"
            android:textColor="#048B9A"
            android:textStyle="bold"
            android:typeface="serif"/>

        <ImageButton
            android:id="@+id/button_cancelModif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:background="#0000"
            android:src="@mipmap/cancel"
            android:adjustViewBounds="false" />

        <ImageButton
            android:id="@+id/button_saveModif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:background="#0000"
            android:src="@mipmap/save"/>

    </LinearLayout>

<!--LinearLayout central-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/tv_nomArtistModif"
                android:id="@+id/textView_nameArtistModify"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="wrap_content"
                android:id="@+id/editText_nameArtistModiy"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/tv_prenomArtistModif"
                android:id="@+id/textView_lastnameArtistModify"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:id="@+id/editText_lastnameArtistModify"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_height="wrap_content"
                android:text="@string/tv_pseudoArtistModif"
                android:id="@+id/textView_pseudoArtistModify"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_pseudoArtistModify"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_naissanceArtistModif"
                android:id="@+id/textView_birthArtistCreate"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />



            <EditText
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_birthArtistModify"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/tv_decesArtistModif"
                android:id="@+id/textView_deathArtistModify"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />


            <EditText
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_deathArtistModify"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_mvtArtistModif"
                android:id="@+id/textView_mvtArtistModify"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />


            <Spinner
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_mvtArtistModify"
                />

        </LinearLayout>



        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView_photoArtistModify"
            android:layout_gravity="center"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_btnDownloadArtistModify"
            android:background="#0000"
            android:layout_gravity="right"
            android:src="@mipmap/download"/>

    </LinearLayout>


</LinearLayout>
