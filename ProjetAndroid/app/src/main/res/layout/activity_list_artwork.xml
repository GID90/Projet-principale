<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hevs.labo.projetandroid.list_artwork"
    android:background="@drawable/backgroundlist">


    <!--1ère ligne contenant le titre Oeuvres, le SearchView ainsi que l'imageButton "add"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_list_artwork"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/artworks"
            android:textColor="#048B9A"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center"
            android:textSize="30dp" />

        <SearchView
            tools:ignore="NewApi"
            android:id="@+id/edit_text_rechercheArtWork"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:hint="recherche"

            />

        <ImageButton
            android:id="@+id/button_addArtWork"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="15"
            android:background="@drawable/buttonbackground"
            android:src="@mipmap/add"
            android:onClick="addArtwork"/>

    </LinearLayout>

    <!--Faire la même liste que dans activity_list_artist-->
    <!--ligne titre-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_list_artwork_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/name"
            android:textColor="#000010"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/title_list_artwork_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/type"
            android:textColor="#000010"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/title_list_artwork_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/artist"
            android:textColor="#000010"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/titre_list_expose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/exposed"
            android:textColor="#000010"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--  <CheckedTextView
              android:id="@+id/list_artiste"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
          </CheckedTextView> -->

        <ListView
            android:id="@+id/list_artwork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

    </LinearLayout>


</LinearLayout>
