<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="hevs.labo.projetandroid.navigation_control">

    <Button
        android:id="@+id/tv_accueil"
        android:text="@string/accueil"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/tv_artiste"
        android:text="@string/artiste"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/tv_oeuvre"
        android:text="@string/oeuvre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/tv_exposition"
        android:text="@string/exposition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/tv_parametre"
        android:text="@string/parametre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
