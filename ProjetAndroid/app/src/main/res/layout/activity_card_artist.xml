<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hevs.labo.projetandroid.card_artist"
    android:background="@drawable/backgroundcard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nom_artiste"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="55"
            android:text="@string/titre_fiche_artiste"
            android:textColor="#048B9A"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/button_backToList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:background="#0000"
            android:src="@mipmap/back"/>

        <ImageButton
            android:id="@+id/button_modifyArtist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:background="#0000"
            android:src="@mipmap/pencil"/>

        <ImageButton
            android:id="@+id/button_deleteArtist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:background="#0000"
            android:src="@mipmap/trash"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView_Artist"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:src="@drawable/picasso" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_descriptionArtist_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 1891 - 1973"
            android:textColor="#000010"
            android:gravity="center"
            android:layout_marginTop="20dp"
           />
        <TextView
            android:id="@+id/tv_descriptionArtist_movement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Mouvement "
            android:textColor="#000010"
            android:gravity="center"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/tv_descriptionArtist_descriptionmovement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" surrÃ©alisme - cubisme "
            android:textColor="#000010"
            android:gravity="center"
            android:layout_marginTop="20dp"
            />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/titre_list_oeuvre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titre_list_oeuvre"
            android:textSize="20dp"
            android:textColor="#000010"
            android:layout_marginTop="10dp"/>

        <ListView
            android:id="@+id/list_oeuvre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>

</LinearLayout>
