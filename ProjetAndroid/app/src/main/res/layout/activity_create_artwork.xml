<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hevs.labo.projetandroid.create_artwork"
    android:orientation="vertical">


    <!--1Ã¨re ligne : titre creer, bouton annuler, bouton sauvegarder-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_createArtwork"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="70"
            android:text="@string/titre_creer_oeuvre"
            android:textSize="20dp"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/button_cancelCreateArtwork"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:src="@drawable/cancel_icon"
            />

        <ImageButton
            android:id="@+id/button_saveCreateArtwork"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:src="@drawable/save"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_nomOeuvreCreate"
            android:id="@+id/textView_nomArtworkCreate"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="33dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_ArtistArtworkCreate"
            android:id="@+id/textView_ArtistArtworkCreate"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/textView_nomArtworkCreate"
            android:layout_alignLeft="@+id/textView_nomArtworkCreate"
            android:layout_alignStart="@+id/textView_nomArtworkCreate" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_RealisationArtworkCreate"
            android:id="@+id/textView_RealisationArtworkCreate"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/textView_ArtistArtworkCreate"
            android:layout_alignLeft="@+id/textView_ArtistArtworkCreate"
            android:layout_alignStart="@+id/textView_ArtistArtworkCreate" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_typeArtworkCreate"
            android:id="@+id/textView_typeArtworkCrete"
            android:layout_below="@+id/textView_RealisationArtworkCreate"
            android:layout_alignLeft="@+id/textView_RealisationArtworkCreate"
            android:layout_alignStart="@+id/textView_RealisationArtworkCreate"
            android:layout_marginTop="35dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_movmentArtworkCreate"
            android:id="@+id/textView_movmentArtworkCreate"
            android:layout_below="@+id/textView_typeArtworkCrete"
            android:layout_alignLeft="@+id/textView_typeArtworkCrete"
            android:layout_alignStart="@+id/textView_typeArtworkCrete"
            android:layout_marginTop="35dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_descriptionArtworkCreate"
            android:id="@+id/textView_descriptionArtworkCreate"
            android:layout_below="@+id/textView_movmentArtworkCreate"
            android:layout_alignLeft="@+id/textView_movmentArtworkCreate"
            android:layout_alignStart="@+id/textView_movmentArtworkCreate"
            android:layout_marginTop="35dp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_nameArtworkCreate"
            android:layout_alignBottom="@+id/textView_nomArtworkCreate"
            android:layout_alignLeft="@+id/edit_text_descriptionArtworkCreate"
            android:layout_alignStart="@+id/edit_text_descriptionArtworkCreate" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_ArtistArtworkCreated"
            android:layout_alignBottom="@+id/textView_ArtistArtworkCreate"
            android:layout_alignLeft="@+id/editText_nameArtworkCreate"
            android:layout_alignStart="@+id/editText_nameArtworkCreate" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_realisationArtworkCreate"
            android:layout_alignBottom="@+id/textView_RealisationArtworkCreate"
            android:layout_alignLeft="@+id/editText_ArtistArtworkCreated"
            android:layout_alignStart="@+id/editText_ArtistArtworkCreated" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_typeArtworkCreate"
            android:layout_alignBottom="@+id/textView_typeArtworkCrete"
            android:layout_alignLeft="@+id/editText_realisationArtworkCreate"
            android:layout_alignStart="@+id/editText_realisationArtworkCreate" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_movementArtworkCreate"
            android:layout_alignBottom="@+id/textView_movmentArtworkCreate"
            android:layout_alignLeft="@+id/edit_text_descriptionArtworkCreate"
            android:layout_alignStart="@+id/edit_text_descriptionArtworkCreate" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_descriptionArtworkCreate"
            android:layout_alignBottom="@+id/textView_descriptionArtworkCreate"
            android:layout_toRightOf="@+id/textView_movmentArtworkCreate"
            android:layout_toEndOf="@+id/textView_movmentArtworkCreate"
            android:layout_below="@+id/editText_movementArtworkCreate" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/imageView_photoArtworktCreate"
            android:layout_alignTop="@+id/textView_nomArtworkCreate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_btnDownloadArtworktCreated"
            android:layout_alignTop="@+id/textView_typeArtworkCrete"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/download"/>

    </RelativeLayout>




</LinearLayout>
