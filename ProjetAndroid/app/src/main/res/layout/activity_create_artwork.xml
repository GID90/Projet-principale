<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hevs.labo.projetandroid.Create_artwork"
    android:orientation="vertical"
    android:background="@drawable/backgroundcard">


    <!--1ère ligne : titre creer, bouton annuler, bouton sauvegarder-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_createArtwork"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/create"
            android:textSize="30dp"
            android:textColor="#048B9A"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center"/>

        <!--Dans l'Action bar désormais-->

      <!--  <ImageButton
            android:id="@+id/button_cancelCreateArtwork"
            style="@style/imageButton"
            android:src="@mipmap/cancel" />

        <ImageButton
            android:id="@+id/button_saveCreateArtwork"
            style="@style/imageButton"
            android:src="@mipmap/save" /> -->

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/name"
                android:id="@+id/textView_nomArtworkCreate"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="wrap_content"
                android:id="@+id/editText_nameArtworkCreate"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/artist"
                android:id="@+id/textView_ArtistArtworkCreate"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:id="@+id/editText_ArtistArtworkCreated"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_height="wrap_content"
                android:text="@string/creation_year"
                android:id="@+id/textView_RealisationArtworkCreate"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_realisationArtworkCreate"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:id="@+id/textView_typeArtworkCrete"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />



            <EditText
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_typeArtworkCreate"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/movement"
                android:id="@+id/textView_movmentArtworkCreate"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />


            <EditText
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_movementArtworkCreate"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:id="@+id/textView_descriptionArtworkCreate"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_descriptionArtworkCreate"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton_btnDownloadArtistCreate"
                style="@style/imageButton"
                android:src="@mipmap/download" />

            <ImageView
                android:id="@+id/imageView_photoArtistCreate"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
