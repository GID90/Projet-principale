<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hevs.labo.projetandroid.create_artwork"
    android:orientation="vertical"
    android:background="@drawable/backgroundcard">


    <!--1Ã¨re ligne : titre creer, bouton annuler, bouton sauvegarder-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_createArtwork"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="70"
            android:text="@string/titre_creer_oeuvre"
            android:textSize="@dimen/textSize"
            android:textColor="#048B9A"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/button_cancelCreateArtwork"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:background="#0000"
            android:src="@mipmap/cancel"
            />

        <ImageButton
            android:id="@+id/button_saveCreateArtwork"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:background="#0000"
            android:src="@mipmap/save"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/tv_nomOeuvreCreate"
                android:id="@+id/textView_nomArtworkCreate"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="wrap_content"
                android:id="@+id/editText_nameArtworkCreate"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/tv_ArtistArtworkCreate"
                android:id="@+id/textView_ArtistArtworkCreate"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:id="@+id/editText_ArtistArtworkCreated"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_height="wrap_content"
                android:text="@string/tv_RealisationArtworkCreate"
                android:id="@+id/textView_RealisationArtworkCreate"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_realisationArtworkCreate"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_typeArtworkCreate"
                android:id="@+id/textView_typeArtworkCrete"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />



            <EditText
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_typeArtworkCreate"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="@string/tv_movmentArtworkCreate"
                android:id="@+id/textView_movmentArtworkCreate"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />


            <EditText
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_movementArtworkCreate"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_descriptionArtworkCreate"
                android:id="@+id/textView_descriptionArtworkCreate"
                android:textColor="#000010"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />


            <EditText
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_descriptionArtworkCreate"
                />

        </LinearLayout>



        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView_photoArtworktCreate"
            android:layout_gravity="center"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_btnDownloadArtworktCreated"
            android:background="#0000"
            android:layout_gravity="right"
            android:src="@mipmap/download"/>

    </LinearLayout>


</LinearLayout>
