<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hevs.labo.projetandroid.Card_room"
    android:background="@drawable/backgroundcard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name_card_room"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="55"
            android:text="@string/title_card_room"
            android:textColor="#048B9A"
            android:textStyle="bold"
            android:textSize="@dimen/textSize"
            android:gravity="center_vertical" />

        <ImageButton
            android:id="@+id/button_back_card_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:src="@mipmap/back"
            android:background="#0000" />

        <ImageButton
            android:id="@+id/button_modify_card_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:src="@mipmap/pencil"
            android:background="#0000" />

        <ImageButton
            android:id="@+id/button_delete_card_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:background="#0000"
            android:src="@mipmap/trash"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_card_room_size"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="@string/tv_card_room_size"
        android:textColor="#000010"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/ImageView_card_room"
        android:layout_width="wrap_content "
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src ="@drawable/plan"/>

</LinearLayout>
