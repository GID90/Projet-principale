<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hevs.labo.projetandroid.Create_room">

    <!--1Ã¨re ligne : nom de la salle, bouton annuler, bouton sauvegarder-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_create_room"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="70"
            android:text="@string/title_create_room"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/button_cancelCreate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:src="@drawable/cancel_icon" />

        <ImageButton
            android:id="@+id/button_saveCreate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:onClick="saveCreateRoom"
            android:src="@drawable/save" />

    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3">

        <TextView
            android:id="@+id/tv_create_room_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_create_room_name"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:id="@+id/et_create_room_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:id="@+id/tv_create_room_size"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_create_room_size"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:id="@+id/et_create_room_size"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1" />

        <ImageView
            android:id="@+id/imageView_photoArtistCreate"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageButton
            android:id="@+id/imageButton_btnDownloadArtistCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/download"
            android:layout_row="2"
            android:layout_column="0" />
    </GridLayout>
</LinearLayout>
