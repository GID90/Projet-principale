<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hevs.labo.projetandroid" >

    <uses-sdk
        android:maxSdkVersion="14"
        android:minSdkVersion="5"
        android:targetSdkVersion="14" />

    <supports-screens
        android:resizeable="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true"
        />

    <!--
  <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".create_artist_temp"
            android:label="@string/title_activity_create_artist"
            android:theme="@style/AppTheme"
            android:parentActivityName=".list_artist_temp">
        </activity>
        <activity
            android:name=".card_artist_temp"
            android:label="@string/title_activity_card_artist"
            android:theme="@style/AppTheme"
            android:parentActivityName=".list_artist_temp">
        </activity>
        <activity
            android:name=".list_artist_temp"
            android:label="@string/title_activity_list_artist"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".list_artwork_temp"
            android:label="@string/title_activity_list_artwork"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".modify_artist_temp"
            android:label="@string/title_activity_modify_artist"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".Card_artwork"
            android:label="@string/title_activity_card_artwork" >
        </activity>
        <activity
            android:name=".Modify_artwork"
            android:label="@string/title_activity_modify_artwork" >
        </activity>
        <activity
            android:name=".create_artwork_temp"
            android:label="@string/title_activity_create_artwork" >
        </activity>
        <activity
            android:name=".list_room_temp"
            android:label="@string/title_activity_list_room"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity">
           <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hevs.labo.projetandroid.MainActivity" />
        </activity>
        <activity
            android:name=".Create_room" >
        </activity>
        <activity
            android:name=".Card_room" >
        </activity>
        <activity
            android:name=".Modify_room" >
        </activity>
        <activity
            android:name=".Settings"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".list_exhibition_temp"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".Create_exhibition"
            android:parentActivityName=".list_exhibition_temp">
